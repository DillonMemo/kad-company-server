{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["plugin:@typescript-eslint/recommended"],
  "rules": {
    "no-console": "off",
    "no-unreachable": "error", // return, break, throw, continue 다음에 코드 허용 x
    "jsx-quotes": ["error", "prefer-double"], // 큰 따옴표, 작은따옴표 규칙
    "eqeqeq": ["error", "always"], // ===, !==
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": ["off"] // 함수 반환 값과 인수에 대한 명시 적 유형은 모든 호출 코드에서 모듈 경계의 입력 및 출력 x
      }
    }
  ]
}
